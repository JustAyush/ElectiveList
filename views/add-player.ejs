<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>

        <h3> Elective Details </h3>

        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <select id="last-name" name="course_name" class="form-control" required>
                        <option selected disabled>Choose Elective Subject</option>
                        <option>DBMS</option>
                        <option>EADD</option>
                        <option>Big Data Technologies</option>
                        <option>AI</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <select id="last-name" name="instructor_name" class="form-control" required>
                      <option selected disabled>Choose instructor</option>
                    <% ins_list.forEach((ins, index) => { %>
                        <option><%= ins.ins_id %> <%= ins.name %></option>
                    <% }) %>
                  </select>
                </div>

                <div class="form-group col-md-4">
                    <select id="last_name" name="section_name" class="form-control" required>
                        <option selected disabled>Choose section</option>
                        <option>BEX</option>
                        <option>BCT</option>
                    </select>
                </div>

                <div class="form-group col-md-4">
                    <select id="last_name" name="elective_no" class="form-control" required>
                        <option selected disabled>Choose Elective No.</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                    </select>
                </div>

            </div>

            <button type="submit" class="btn btn-primary float-right">Add Elective</button>
        </form>
    </div>
</div>
</body>
</html>
