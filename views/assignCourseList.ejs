<% include partials/header.ejs %>
    <div class="table-wrapper">
      <% if (assigncourses.length > 0) {%>

        <h2> Electives assigned to Students of Batch: <%= year %> <%= sec %> </h2>

        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Year/Section/Rollno</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">ElectiveII</th>
                    <th scope="col">ElectiveIII</th>
                </tr>
            </thead>
            <tbody>
                <% assigncourses.forEach((assigncourse, index) => { %>
                    <tr>
                        <td> <%= assigncourse.year %>/<%= assigncourse.sec %>/<%= assigncourse.stu_id %> </td>
                        <td> <%= assigncourse.first_name %> </td>
                        <td> <%= assigncourse.last_name %> </td>
                        <td> <%= assigncourse.elec2_name %> </td>
                          <td> <%= assigncourse.elec3_name %> </td>
                        <td><a href="/student/assigncourse/edit/<%= assigncourse.year %>/<%= assigncourse.sec %>/<%= assigncourse.stu_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a></td>
                        <td><a href="/student/assigncourse/delete/<%= assigncourse.year %>/<%= assigncourse.sec %>/<%= assigncourse.stu_id %>"class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>


      <% } else { %>
          <p class="text-center">No Assigned Course List found. Go <a href="/student/" >here</a> to assign course.</p>
      <% } %>




    </div>
