<% include partials/header.ejs %>
  <a class="float-right" href="/<%= course_id %>/student/add" title="Add a New Player">Add Student</a>
    <div class="table-wrapper">
      <% if (students.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Student Name</th>
                    <th scope="col">Rollno</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((student, index) => { %>
                    <tr>
                        <td> <%= student.name %></td>
                        <td> <%= student.sec_id %>/<%= student.stu_id %> </td>
                        <td><a href="/<%= course_id %>/student/edit/<%= student.stu_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a></td>
                        <td><a href="/delete/<%= course_id %>"class="btn btn-sm btn-danger">Delete</a></td>
                    </tr>
                <% }) %>

            </tbody>
        </table>


      <% } else { %>
          <p class="text-center">No Electives found. Go <a href="/add" >here</a> to new elective.</p>
      <% } %>




    </div>
</div>
</body>

</html>
